<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Fee Payment - <%= user.name %></title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .info-section {
      border: 1px solid #ccc;
      padding: 15px;
      margin: 15px;
      border-radius: 5px;
      background-color: #f9f9f9;
    }
    .pay-btn {
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-top: 15px;
    }
    .pay-btn:hover {
      background-color: #0056b3;
    }
    .disabled-btn {
      padding: 10px 20px;
      background-color: #ccc;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: not-allowed;
      margin-top: 15px;
    }
  </style>
  <script>
    async function payFee() {
      // Retrieve fixed hidden values.
      const userId = document.getElementById('user_id').value;
      const amount = document.getElementById('amount').value;
      
      try {
        // Submit a POST request to /api/fees with fixed user_id and amount.
        const response = await fetch('/api/fees', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ user_id: userId, amount: amount })
        });
        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.error || "Fee payment failed");
        }
        // Get the response as a blob (the fee receipt file).
        const blob = await response.blob();
        // Create a download link for the fee receipt.
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'fee_receipt.txt';
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        // After download, update the UI by replacing the form with a disabled "Fees Paid" button.
        document.getElementById('feeContainer').innerHTML = '<button class="disabled-btn" disabled>Fees Paid</button>';
      } catch (error) {
        console.error("Fee payment error:", error);
        alert("Error: " + error.message);
      }
    }
  </script>
</head>
<body>
  <header>
    <h1>Fee Payment</h1>
    <nav>
      <a href="/dashboard?user_id=<%= user.user_id %>">Dashboard</a>
      <a href="/login">Logout</a>
    </nav>
  </header>
  
  <main>
    <div class="info-section">
      <h2>User Details</h2>
      <p><strong>Name:</strong> <%= user.name %></p>
      <p><strong>Roll Number:</strong> <%= user.roll_number %></p>
      <p><strong>Email:</strong> <%= user.email %></p>
    </div>
    
    <div class="info-section">
      <h2>Semester Details</h2>
      <% if (semester) { %>
        <p><strong>Semester Number:</strong> <%= semester.semester_no %></p>
        <p><strong>Start Date:</strong> <%= semester.start_date %></p>
        <p><strong>End Date:</strong> <%= semester.end_date %></p>
        <p><strong>Fee (ETH):</strong> <%= semester.fees %></p>
      <% } else { %>
        <p>No active semester found. Please check back later.</p>
      <% } %>
    </div>
    
    <% if (semester) { %>
      <!-- Hidden fixed values -->
      <input type="hidden" id="user_id" value="<%= user.user_id %>">
      <input type="hidden" id="amount" value="<%= semester.fees %>">
      
      <!-- Container for fee form or fees paid button -->
      <div id="feeContainer">
        <% if (paid) { %>
          <button class="disabled-btn" disabled>Fees Paid</button>
        <% } else { %>
          <button class="pay-btn" onclick="payFee()">Pay Fee</button>
        <% } %>
      </div>
    <% } %>
  </main>
  
  <footer>
    <p>&copy; 2025 College XXX</p>
  </footer>
</body>
</html>
